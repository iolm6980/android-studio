<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clothes_btn"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="clothes" />

                <Button
                    android:id="@+id/shoose_btn"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="shoose" />

                <Button
                    android:id="@+id/outer_btn"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="outer" />

                <Button
                    android:id="@+id/pants_btn"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="pants" />

            </LinearLayout>

            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="351dp"
                android:layout_height="37dp"
                android:layout_margin="10dp"
                android:gravity="bottom"
                android:text="  특별할인 상품"
                android:textSize="20dp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/saleview"
                android:layout_width="match_parent"
                android:layout_height="297dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/line"
                android:layout_width="390dp"
                android:layout_height="2px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_margin="15dp"
                android:textSize="20dp"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="상의" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/line2"
                android:layout_width="390dp"
                android:layout_height="2px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:textSize="20dp"
                android:text="신발" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_recycler1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/line4"
                android:layout_width="390dp"
                android:layout_height="2px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="20dp"
                android:text="하의" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_recycler2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/line5"
                android:layout_width="390dp"
                android:layout_height="2px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="20dp"
                android:text="아우터" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_recycler3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </ScrollView>
</layout>